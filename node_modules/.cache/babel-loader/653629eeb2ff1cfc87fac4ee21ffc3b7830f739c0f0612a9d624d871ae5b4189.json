{"ast":null,"code":"import { db } from '../firebase';\nexport default {\n  name: 'DiscussionBoard',\n  data() {\n    return {\n      message: '',\n      messages: []\n    };\n  },\n  methods: {\n    async postMessage() {\n      if (!this.message) return;\n      const newMessage = {\n        text: this.message,\n        createdAt: new Date()\n      };\n      await db.collection('studyGroups').doc(this.$route.params.id).collection('messages').add(newMessage);\n      this.message = '';\n      this.fetchMessages();\n    },\n    async fetchMessages() {\n      const snapshot = await db.collection('studyGroups').doc(this.$route.params.id).collection('messages').orderBy('createdAt').get();\n      this.messages = snapshot.docs.map(doc => ({\n        id: doc.id,\n        ...doc.data()\n      }));\n    }\n  },\n  created() {\n    this.fetchMessages();\n  }\n};","map":{"version":3,"names":["db","name","data","message","messages","methods","postMessage","newMessage","text","createdAt","Date","collection","doc","$route","params","id","add","fetchMessages","snapshot","orderBy","get","docs","map","created"],"sources":["/Users/ag47/virtual-study-group-platfor copy/src/components/DiscussionBoard.vue"],"sourcesContent":["<template>\n  <div class=\"discussion-board\">\n    <h2>Discussion Board</h2>\n    <form @submit.prevent=\"postMessage\">\n      <div>\n        <label for=\"message\">Message:</label>\n        <textarea id=\"message\" v-model=\"message\" required></textarea>\n      </div>\n      <button type=\"submit\">Post Message</button>\n    </form>\n    <div v-if=\"messages.length > 0\">\n      <h3>Messages</h3>\n      <div v-for=\"msg in messages\" :key=\"msg.id\" class=\"message\">\n        <p>{{ msg.text }}</p>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { db } from '../firebase';\n\nexport default {\n  name: 'DiscussionBoard',\n  data() {\n    return {\n      message: '',\n      messages: [],\n    };\n  },\n  methods: {\n    async postMessage() {\n      if (!this.message) return;\n\n      const newMessage = {\n        text: this.message,\n        createdAt: new Date(),\n      };\n\n      await db\n        .collection('studyGroups')\n        .doc(this.$route.params.id)\n        .collection('messages')\n        .add(newMessage);\n      this.message = '';\n      this.fetchMessages();\n    },\n    async fetchMessages() {\n      const snapshot = await db\n        .collection('studyGroups')\n        .doc(this.$route.params.id)\n        .collection('messages')\n        .orderBy('createdAt')\n        .get();\n      this.messages = snapshot.docs.map((doc) => ({\n        id: doc.id,\n        ...doc.data(),\n      }));\n    },\n  },\n  created() {\n    this.fetchMessages();\n  },\n};\n</script>\n\n<style scoped>\n.discussion-board {\n  padding: 2em;\n}\n.message {\n  margin-bottom: 1em;\n  padding: 1em;\n  border: 1px solid #ccc;\n  border-radius: 4px;\n}\n</style>\n"],"mappings":"AAoBA,SAASA,EAAC,QAAS,aAAa;AAEhC,eAAe;EACbC,IAAI,EAAE,iBAAiB;EACvBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,EAAE;MACXC,QAAQ,EAAE;IACZ,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,WAAWA,CAAA,EAAG;MAClB,IAAI,CAAC,IAAI,CAACH,OAAO,EAAE;MAEnB,MAAMI,UAAS,GAAI;QACjBC,IAAI,EAAE,IAAI,CAACL,OAAO;QAClBM,SAAS,EAAE,IAAIC,IAAI,CAAC;MACtB,CAAC;MAED,MAAMV,EAAC,CACJW,UAAU,CAAC,aAAa,EACxBC,GAAG,CAAC,IAAI,CAACC,MAAM,CAACC,MAAM,CAACC,EAAE,EACzBJ,UAAU,CAAC,UAAU,EACrBK,GAAG,CAACT,UAAU,CAAC;MAClB,IAAI,CAACJ,OAAM,GAAI,EAAE;MACjB,IAAI,CAACc,aAAa,CAAC,CAAC;IACtB,CAAC;IACD,MAAMA,aAAaA,CAAA,EAAG;MACpB,MAAMC,QAAO,GAAI,MAAMlB,EAAC,CACrBW,UAAU,CAAC,aAAa,EACxBC,GAAG,CAAC,IAAI,CAACC,MAAM,CAACC,MAAM,CAACC,EAAE,EACzBJ,UAAU,CAAC,UAAU,EACrBQ,OAAO,CAAC,WAAW,EACnBC,GAAG,CAAC,CAAC;MACR,IAAI,CAAChB,QAAO,GAAIc,QAAQ,CAACG,IAAI,CAACC,GAAG,CAAEV,GAAG,KAAM;QAC1CG,EAAE,EAAEH,GAAG,CAACG,EAAE;QACV,GAAGH,GAAG,CAACV,IAAI,CAAC;MACd,CAAC,CAAC,CAAC;IACL;EACF,CAAC;EACDqB,OAAOA,CAAA,EAAG;IACR,IAAI,CAACN,aAAa,CAAC,CAAC;EACtB;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDepend